{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "lib": ["dom","es2017"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node", 
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true,
      "checkJs": true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  